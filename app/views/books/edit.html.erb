<div class="box">

	<% if flash[:notice] %>
		<div class="flash"><%= flash[:notice] %></div>
	<% end %>

	<h1>Editing Book</h1>

	<% if @book.errors.any? %>
	<div class="error">
		<p class="error-count"><%= @book.errors.count %>errors prohibited this book from being saved: </p>
	    <div id="error_explanation" class="alert alert-danger">
		  	<ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
	    </div>
	</div>
	<% end %>

	<%= form_for(@book) do |f| %>
		<div class="field">
			<%= f.label :title, "title" %>
			<%= f.text_field :title %>
		</div>
		<div class="field">
			<%= f.label :body, "body" %>
			<%= f.text_area :body %>
		</div>
		<div class="button"><%= f.submit "Update Book"%></div>
	<% end %>
	<div class="show-button"><%= link_to "Show", book_path %></div>
	<div class="edit-solid">|</div>
	<div class="back-button"><%= link_to "Back", books_path %></div>
</div>
