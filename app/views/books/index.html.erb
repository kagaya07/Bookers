<h2>Books</h2>
<table>

	<thead>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	</thead>

	<tbody>
	    <% @books.each do |book| %>
			<tr class="book-box">
				<td class="book-title"><%= book.title %></td>
				<td class="book-body"><%= book.body %></td>
				<td class="book-action"><%= link_to "Show", book_path(book) %>
					<%= link_to "Edit", edit_book_path(book.id) %>
					<%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?"%>
				</td>
			</tr>
	    <% end %>
	</tbody>

</table>


<h3>New book</h3>
<%=form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit "Create Book"%>
<% end %>


