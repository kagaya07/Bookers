<div class="box">
	<h1>Books</h1>
	<table>

		<thead>
		<tr>
			<th class="thesd-title">title</th>
			<th class="thesd-body">body</th>
		</tr>
		</thead>

		<tbody>
		    <% @books.each do |book| %>
				<tr class="book-box">
					<td class="book-title">
						<%= book.title %></td>
					<td class="book-body">
						<%= book.body %></td>
					<td class="book-action">
						<%= link_to "Show", book_path(book) %></td>
					<td class="book-action">
						<%= link_to "Edit", edit_book_path(book.id) %></td>
					<td class="book-action">
						<%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?"%>
					</td>
				</tr>
		    <% end %>
		</tbody>

	</table>


	<h3>New book</h3>

	<% if @book.errors.any? %>
	<div class="error">
		<p class="error-count"><%= @book.errors.count %>errors prohibited this book from being saved: </p>
	    <div id="error_explanation" class="alert alert-danger">
		  	<ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
	    </div>
	</div>
	<% end %>

	<%=form_for(@book) do |f| %>
		<div class="field">
			<%= f.label :title, "title" %>
			<%= f.text_field :title %>
		</div>
		<div class="field">
			<%= f.label :body, "body" %>
			<%= f.text_area :body %>
		</div>
		<div class="button"><%= f.submit "Create Book"%></div>
	<% end %>
</div>

