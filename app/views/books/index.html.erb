<div class="box">
	<h1>Books</h1>
	<table>

		<thead>
		<tr>
			<th class="thesd-title">title</th>
			<th class="thesd-body">body</th>
		</tr>
		</thead>

		<tbody>
		    <% @books.each do |book| %>
				<tr class="book-box">
					<td class="book-title">
						<%= book.title %></td>
					<td class="book-body">
						<%= book.body %></td>
					<td class="book-action">
						<%= link_to "Show", book_path(book) %></td>
					<td class="book-action">
						<%= link_to "Edit", edit_book_path(book.id) %></td>
					<td class="book-action">
						<%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?"%>
					</td>
				</tr>
		    <% end %>
		</tbody>

	</table>


	<h3>New book</h3>
	<%=form_for(@book) do |f| %>

		<p>Title</p>
		<div class="text-box"><%= f.text_field :title %></div>

		<p>Body</p>
		<div class="text-box"><%= f.text_area :body %></div>
		<div class="button"><%= f.submit "Create Book"%></div>
	<% end %>
</div>

